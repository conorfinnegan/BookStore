<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.conorfinnegan.bookstore">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRIYE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddBookActivity"
            android:label="@string/title_activity_add_book"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewAllBooks"
            android:label="@string/title_activity_view_all_users"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewBook"
            android:label="@string/title_activity_view_book"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerProfilePage"
            android:label="@string/title_activity_customer_profile_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerSearch"
            android:label="@string/title_activity_customer_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchReturnActivity"
            android:label="@string/title_activity_search_return"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerViewBook"
            android:label="@string/title_activity_customer_view_book"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewCart"
            android:label="@string/title_activity_view_cart"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
